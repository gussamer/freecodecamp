#!/usr/bin/env bash
if [ $# -ne 2 ]; then
    echo $0: usage: setupproj name description
    exit 1
fi
name=$1
desc=$2
mkdir $name
cd $name
npm init
node ../writenode.js
echo "node_modules" > .gitignore
echo "# $name\n$desc\n" > README.md
cp ../LICENSE.md LICENSE.md
git init
npm install express --save
cp ../tempserv.js server.js
heroku create $name
heroku git:remote -a $name
git add --all
git commit -m "initial setup commit"
git remote add origin https://github.com/gussamer/$name.git
git push -u origin master
git push heroku master
wget https://$name.herokuapp.com/